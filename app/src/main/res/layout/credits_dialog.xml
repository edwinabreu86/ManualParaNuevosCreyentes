<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:padding="@dimen/item_margin">

    <TextView
        style="@style/textView_style"
        android:text="Iconos creados por:"
        android:textColor="@color/primaryTextColor"
        android:drawableTop="@mipmap/ic_launcher"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/textView_style"
        android:id="@+id/credits_text"
        android:text="https://www.flaticon.com/authors/smashicons"
        android:textColor="@color/secondaryDarkColor"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/textView_style"
        android:text="www.flaticon.com tiene licencia de:"
        android:textColor="@color/primaryTextColor"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/textView_style"
        android:text="http://creativecommons.org/licenses/by/3.0/"
        android:textColor="@color/secondaryDarkColor"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/close_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:textColor="@color/secondaryDarkColor"
        android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>
